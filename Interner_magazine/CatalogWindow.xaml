<Window x:Class="Interner_magazine.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Interner_magazine"
        Title="Каталог"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF" Icon="/7343418-middle.png">


    <Window.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Каталог товаров" FontSize="28" FontWeight="Light" Foreground="#333333"/>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Text="Пользователь: " Foreground="#555555" Margin="0,0,4,0"/>
                <TextBlock x:Name="txtUserInfo" Foreground="#1E90FF"/>
            </StackPanel>
        </Grid>

        <!-- Панель поиска -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <TextBox x:Name="txtSearch" BorderThickness="0" Padding="12,10" 
                         Background="Transparent" VerticalContentAlignment="Center"/>
            </Border>
            <Button Grid.Column="1" x:Name="btnSearch" Content="Найти" Margin="16,0,0,0"
                    Padding="24,10" Background="#1E90FF" Foreground="White" BorderThickness="0"
                    Click="btnSearch_Click"/>
        </Grid>

        <!-- TabControl -->
        <TabControl Grid.Row="2" Margin="0,0,0,24">
            <!-- Товары -->
            <TabItem Header="Товары">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ListView x:Name="lvProducts" BorderThickness="0" Background="Transparent" SelectionMode="Multiple">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0 5"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Изображение" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Width="80" Height="80" Background="#F5F5F5" CornerRadius="4"
                                            BorderBrush="#E0E0E0" BorderThickness="1">
                                                    <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" Stretch="UniformToFill"/>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Название" Width="250" DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Цена" Width="100" 
                                         DisplayMemberBinding="{Binding Price, StringFormat={}{0:N2} руб.}"/>
                                    <GridViewColumn Header="Категория" Width="120" DisplayMemberBinding="{Binding Category}"/>
                                    <GridViewColumn Header="В наличии" Width="80" DisplayMemberBinding="{Binding Quantity}"/>
                                    <GridViewColumn Header="Количество" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox x:Name="txtQuantity" Text="1" Width="50" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Действия" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Добавить" Click="AddToCart_Click"
                                            Padding="8 4" Background="#1E90FF" Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Корзина -->
            <TabItem Header="Корзина">
                <StackPanel>
                    <TextBlock Text="Ваша корзина" FontSize="24" FontWeight="Light" Foreground="#333333" Margin="0,0,0,16"/>
                    <ListView x:Name="lvCart" BorderThickness="0" Background="Transparent">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0 5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Изображение" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Width="60" Height="60" Background="#F5F5F5" CornerRadius="4"
                                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                                <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" Stretch="UniformToFill"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Название" Width="250" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Цена" Width="100" 
                                                 DisplayMemberBinding="{Binding Price, StringFormat={}{0:N2} руб.}"/>
                                <GridViewColumn Header="Количество" Width="80" DisplayMemberBinding="{Binding Quantity}"/>
                                <GridViewColumn Header="Сумма" Width="100" 
                                                 DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:N2} руб.}"/>
                                <GridViewColumn Header="Действия" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Удалить" Click="RemoveFromCart_Click"
                                                    Padding="8 4" Background="#FF6B6B" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Оформление заказа -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Адрес доставки" Margin="0,0,0,8" Foreground="#555555"/>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,16">
                    <TextBox x:Name="txtDeliveryAddress" BorderThickness="0" Padding="12,10"
                             Background="Transparent"/>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Способ доставки" Margin="0,0,0,8" Foreground="#555555"/>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                            <ComboBox x:Name="cmbDeliveryMethod" BorderThickness="0" Padding="12,10"
                                      Background="Transparent" SelectionChanged="cmbDeliveryMethod_SelectionChanged">
                                <ComboBoxItem Content="Почтой"/>
                                <ComboBoxItem Content="Самовывоз"/>
                                <ComboBoxItem Content="Доставка курьером"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Итоговая сумма" Margin="0,0,0,8" Foreground="#555555"/>
                        <TextBlock x:Name="txtTotalSum" FontSize="24" FontWeight="Light" Foreground="#1E90FF"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="24,0,0,0">
                <Button x:Name="btnExit" Content="Выйти" Padding="24,10" Margin="0,0,16,0"
                        Background="Transparent" Foreground="#555555" BorderThickness="1"
                        BorderBrush="#E0E0E0" Click="btnExit_Click"/>
                <Button x:Name="btnMakeOrder" Content="Оформить заказ" Padding="24,10"
                        Background="#1E90FF" Foreground="White" BorderThickness="0"
                        Click="btnMakeOrder_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
